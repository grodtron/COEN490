<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/RoadBackground"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="270dp"
        android:background="@drawable/road_background_main" />

    <ImageView
        android:id="@+id/StartRun"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="247dp"
        android:background="@drawable/startrun" />

    <ImageView
        android:id="@+id/ViewHistory"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="247dp"
        android:background="@drawable/viewhistory" />

    <Chronometer
        android:id="@+id/mChronometer"
        android:format="%s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/value_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_alignBottom="@+id/mChronometer"
        android:layout_marginLeft="258dp" />

    <TextView
        android:id="@+id/value_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_alignBottom="@+id/mChronometer"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/value_baro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/RoadBackground"
        android:layout_marginLeft="186dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/value_humi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_alignBottom="@+id/RoadBackground"
        android:layout_marginLeft="96dp"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
