<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_detail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/RoadBackground"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/history_background"
        android:alpha="0.3" />

    <TextView
        android:id="@+id/value_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:layout_marginBottom="170dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/value_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="110dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/historybar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/historybar"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="210dp"
        android:layout_alignTop="@id/RoadBackground"
        android:layout_alignBottom="@id/RoadBackground"
        android:layout_alignLeft="@id/RoadBackground"
        android:layout_alignRight="@id/RoadBackground"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/mapview"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp" />

